<!DOCTYPE html>
<html>
<head>
  <title>RailsChat</title>
  <%= stylesheet_link_tag    "application", "pusher-realtime-chat-widget/src/pusher-chat.css", :media => "all" %>
  <%= javascript_include_tag "http://code.jquery.com/jquery-1.7.1.min.js",
  							 "http://js.pusher.com/2.1/pusher.min.js",
  							 "pusher-realtime-chat-widget/src/js/PusherChatWidget.js" %>
  <%= csrf_meta_tags %>
</head>
<body>
   <% flash.each do |name, msg| %>
    <%= content_tag :div, msg, :id => "flash#{name}" %>
  <% end %>

  <div id="user_nav">
  <% if current_user %>
    <div id="navbar">
      <ul id="nav-menu">
        <li><a href="#">Friends</a></li>
        <li><a href="#">Your Groups</a></li>
        <li><a href="#">Contact</a></li>
      </ul>

      <ul id="settings-menu">
        <li><span class="fontawesome-cogs"> Settings</li>
      </ul>

    <p id="greeting">Hello <%= current_user.username %>. <%= link_to "Log out", log_out_path %></p>
    
  </div>
  <% else %>
  <% end %>
</div>

<% flash.each do |name, msg| %>
  <%= content_tag :div, msg, :id => "flash_#{name}" %>
<% end %>

<%= yield %>

</body>
</html>
