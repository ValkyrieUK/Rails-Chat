<h1>Chat</h1>

<div id="chat">
  <% @messages.map do |m|%>
    <ul>
      <%= m.user_username %>
      <%= m.message %>
      <%= m.created_at %>
    </ul>
  <% end %>
</div>

<%= form_for Message.new, remote: true do |f| %>
  <%= f.text_field :message %>
  <%= f.submit "Send" %>
<% end %>
<%= subscribe_to "/messages/new" %>

<script type="text/javascript">
document.getElementById('chat').scrollTop = 9e9 + 9e9;
</script>